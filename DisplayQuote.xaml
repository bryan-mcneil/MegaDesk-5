        <TextBlock HorizontalAlignment="Left" Margin="228,245,0,0" TextWrapping="Wrap" Text="Drawer Count:" VerticalAlignment="Top" Height="47" Width="156" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="289,297,0,0" TextWrapping="Wrap" Text="Material:" VerticalAlignment="Top" Height="47" Width="95" FontSize="24" RenderTransformOrigin="0.501,0.477"/>
